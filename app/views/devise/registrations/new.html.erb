<%= render "shared/second-header" %>

<%= form_with model: @user, url: user_registration_path, local: true, class: "registration-main" do |f| %>
  <div class="form-wrap">
    <div class="form-header">
      <h1 class="form-header-text">会員情報入力</h1>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <div class="form-text-wrap">
        <%= f.label "ニックネーム", class: "form-text" %>
        <span class="indispensable">必須</span>
        <%= f.text_field :nickname, autofocus: true, placeholder: "例) furima太郎", class: "input-default" %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <%= f.label "メールアドレス", class: "form-text" %>
        <span class="indispensable">必須</span>
        <%= f.email_field :email, placeholder: "PC・携帯どちらでも可", class: "input-default" %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <%= f.label "パスワード", class: "form-text" %>
        <span class="indispensable">必須</span>
        <%= f.password_field :password, autocomplete: "off", placeholder: "6文字以上の半角英数字", minlength: "6", class: "input-default" %>
        <p class="info-text">※英字と数字の両方を含めて設定してください</p>
      </div>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <%= f.label "パスワード（確認）", class: "form-text" %>
        <span class="indispensable">必須</span>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "同じパスワードを入力して下さい", minlength: "6", class: "input-default" %>
      </div>
    </div>

    <div class="form-group">
      <p class="form-info-header">本人確認</p>
      <p class="form-info-text">安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。</p>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <%= f.label "お名前（全角）", class: "form-text" %>
        <span class="indispensable">必須</span>
      </div>
      <div class="input-name-wrap">
        <%= f.text_area :last_name, placeholder: "例) 山田", class: "input-name" %> <%= f.text_area :first_name, placeholder: "例) 陸太郎", class: "input-name" %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <%= f.label "お名前カナ（全角）", class: "form-text" %>
        <span class="indispensable">必須</span>
      </div>
      <div class="input-name-wrap">
        <%= f.text_area :last_name_kana, placeholder: "例) ヤマダ", class: "input-name" %> <%= f.text_area :first_name_kana, placeholder: "例) リクタロウ", class: "input-name" %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <%= f.label "生年月日", class: "form-text" %>
        <span class="indispensable">必須</span>
      </div>
      <div class="input-birth-wrap">
        <%= select_year(nil, start_year: 1900, end_year: Time.current.year, field_name: 'birthday(1i)', prefix: 'user', prompt: '--') %>
        <p>年</p>
        <%= select_month(nil, use_month_numbers: true, field_name: 'birthday(2i)', prefix: 'user', prompt: '--') %>
        <p>月</p>
        <%= select_day(nil, field_name: 'birthday(3i)', prefix: 'user', prompt: '--') %>
        <p>日</p>
      </div>

      <p class="info-text">※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
    </div>

    <div class="form-group">
      <h2 class="form-bottom-text">「会員登録」のボタンを押すことにより、<span>利用規約</span><br>に同意したものとみなします</h2>
    </div>

    <div class="register-btn">
      <%= f.submit "会員登録", class: "register-red-btn" %>
    </div>

    <p class="register-info">本人情報の登録について</p>
  </div>
<% end %>

<%= render "shared/second-footer" %>
